{
  "manifest_version": 3,
  "name": "Hızlı Döviz Çevirici",
  "version": "1.0",
  "description": "Seçili metindeki para birimlerini otomatik algılayıp çeviren modern eklenti.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://api.exchangerate-api.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cc_icon.png",
      "48": "icons/cc_icon.png",
      "128": "icons/cc_icon.png"
    }
  },
  "icons": {
    "16": "icons/cc_icon.png",
    "48": "icons/cc_icon.png",
    "128": "icons/cc_icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "currency_data.js",
        "languages/country_translations.js",
        "content.js"
      ],
      "css": ["content.css"]
    }
  ]
}
